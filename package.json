{
    "name": "hiddenscore",
    "version": "1.0.0",
    "description": "Hidden Score application",
    "engines": {
      "node": "16.x",
      "npm": "8.x"
    },
    "scripts": {
      "start": "cd backend && go run cmd/api/main.go",
      "build": "cd frontend && npm install && npm run build && cd ../backend && go build -o app cmd/api/main.go",
      "postinstall": "npm run build"
    },
    "cacheDirectories": ["frontend/node_modules"]
  }